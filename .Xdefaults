
URxvt*geometry:           150x40



! Looks, also dont use bold font.
URxvt*font:               xft:InconsolataForPowerline:medium:pixelsize=14
URxvt*boldFont:           xft:InconsolataForPowerline:medium:pixelsize=14
URxvt*colorBD:            #ffffff
URxvt*foreground:         #aaaaaa
URxvt*scrollBar:          false
URxvt*internalBorder:     0
!*termName:               xterm-256color

! Transparent background
URxvt*depth:              32
URxvt*background:         rgba:0000/0000/0000/dddd


*dynamicColors:      true
xterm*utf8:               2
xterm*saveLines:          10000

! Visual bell
XTerm*visualBell:         true

URxvt*cursorColor: red

xterm*scrollKey:          true
xterm*scrollTtyOutput:    false

!xterm*jumpScroll:         true
!xterm*multiScroll:        true
!xterm*toolBar:            false
!xterm*antialias:          false

URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! Clicking to select stuff
!XTerm*on2Clicks:  regex [^ \n]+
!XTerm*on3Clicks:  line

! Dont select special chars
URxvt.cutchars: "\\ `\"\'()*;<>[]{|}&,=?@^\:"

! Match URLs
URxvt*perl-ext-common:  default,matcher
URxvt*urlLauncher:      /usr/bin/google-chrome
URxvt*matcher.button:   1
URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

! this does what?
XTerm*cutNewline: true

xterm*selectToClipboard: true

*customization: -color

! http://j.rigelseven.com/read/55816/
xterm*highlightSelection: true

! Support alt-keys in irssi
! http://irssi.org/beginner/
XTerm*eightBitInput:   false
XTerm*metaSendsEscape: true

Xft.antialias: true
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

