Xft.antialias:            true
Xft.autohint:             0
Xft.hinting:              1
Xft.hintstyle:            hintfull
Xft.lcdfilter:            lcddefault
Xft.rgba:                 rgb

! Dzen2

dzen2.font:               -*-InconsolataForPowerline-medium-r-*-*-13-*-*-*-*-*-*-*
dzen2.background:         #111111
dzen2.foreground:         #aaaaaa

! URxvt

URxvt.termName:           rxvt-256color
*customization:           -color
URxvt.title:              Terminal
Urxvt.loginShell:         true

URxvt*geometry:           150x40
URxvt*visualBell:         false
URxvt*urgentOnBell:       true
URxvt*scrollBar:          false
URxvt*internalBorder:     0

! Transparent background
!URxvt*depth:              32
!URxvt*background:         rgba:0000/0000/0000/dddd

! Fonts
URxvt*foreground:         #aaaaaa
URxvt*font:               xft:InconsolataForPowerline:medium:pixelsize=14
URxvt*boldFont:           xft:InconsolataForPowerline:medium:pixelsize=14
URxvt*colorBD:            #ffffff
URxvt.xftAntialias:       true

! urxvt will force a screen refresh on each new line it received
URxvt*jumpScroll:         false

! Remove ! if lines are disappear
! URxvt*skipScroll:         false

URxvt*saveLines:          10000

! Match URLs
! urlLauncher (ubuntu) url-launcher (archlinux)
URxvt*perl-ext-common:    default,matcher
URxvt*url-launcher:       /usr/bin/google-chrome
URxvt*underlinedURLs:     true
URxvt*matcher.button:     1
URxvt*matcher.pattern.1:  \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
! Dont select special chars
URxvt.cutchars:           "`()'*[]{|}"

! Disable Keycap Picture Insert and ISO-14755 Mode. Trigger by Ctrl-Shift
! https://bitbucket.org/sme/dotfiles/src/0b4387472283/.Xdefaults
URxvt.iso14755_52:        false
URxvt.iso14755:           false

! Support alt-keys in irssi
! http://irssi.org/beginner/
URxvt*eightBitInput:       false
URxvt*metaSendsEscape:     true
! Use super instead of alt
URxvt*modifier:            super

! ! Xterm

xterm*utf8:               1
xterm*saveLines:          10000
xterm*scrollKey:          true
xterm*jumpScroll:        true
xterm*multiScroll:        true
xterm*toolBar:            false
xterm*antialias:          false
xterm*scrollTtyOutput:    false
xterm*visualBell:         false

! Clicking to select stuff
XTerm*on2Clicks:          regex [^ \n]+
XTerm*on3Clicks:          line

XTerm*cutNewline:         true
XTerm*selectToClipboard:  true

! http://j.rigelseven.com/read/55816/
XTerm*highlightSelection:  true

! http://blog.ssokolow.com/archives/2011/05/01/modernizing-xterms-paste/
! Meta is <Alt>
! iconify() minimize @todo print() does what?
! Only work in xterm
*VT100.Translations: #override \
    Shift <Key>Up:                scroll-back(1) \n\
    Shift <Key>Down:              scroll-forw(1) \n\
    ~Meta Shift Ctrl <Key>V:      insert-selection(CLIPBOARD) \n\
    Meta Shift Ctrl <Key>V:       insert-selection(PRIMARY) \n\
    ~Shift <Btn1Up>:              select-end(PRIMARY, CUT_BUFFER0) \n\
    Shift <Btn1Up>:               select-end(CLIPBOARD, CUT_BUFFER1) \n\
    ~Shift ~Ctrl ~Meta <Btn2Up>:  insert-selection(PRIMARY, CUT_BUFFER0) \n\
    Shift ~Ctrl ~Meta <Btn2Up>:   insert-selection(CLIPBOARD, CUT_BUFFER1) \n\
    Meta <Key>C:                  select-cursor-start() \
                                  select-cursor-end(PRIMARY, CUT_BUFFER0) \n\
    Meta <Key>V:                  insert-selection(PRIMARY, CUT_BUFFER_0) \n\
    Meta <Key>M:                  iconify() \n\
    Meta <Key>P:                  print()
